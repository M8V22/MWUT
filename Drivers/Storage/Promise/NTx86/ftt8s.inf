[Version]
signature="$Windows NT$"
Class=SCSIAdapter
ClassGUID={4D36E97B-E325-11CE-BFC1-08002BE10318}
CatalogFile=FTT8s.cat
Provider=%Promise%
DriverVer=08/16/2011, 1.3.0.99
;

[DestinationDirs] 
FTT8s.Files.x86_12 = 12 

[SourceDisksNames.x86]
0=%Desc_x860%

[SourceDisksFiles.x86]
FTT8s.sys=0,

[ControlFlags]
ExcludeFromSelect=*

[Manufacturer] 
%Promise%=Promise

[Promise]
%FastTrak TX4660_Desc%=Napa_Inst,PCI\VEN_105A&DEV_3781&SUBSYS_3780105A
%FastTrak TX8660_Desc%=Napa_Inst,PCI\VEN_105A&DEV_3781&SUBSYS_3781105A
;%FastTrak TX8668_Desc%=Napa_Inst,PCI\VEN_105A&DEV_3781&SUBSYS_3782105A
%FastTrak TX8668_VessRAID_Desc%=Napa_Inst,PCI\VEN_105A&DEV_3781&SUBSYS_3783105A
%FastTrak SAS_TX8660_Desc%=Napa_Inst,PCI\VEN_105A&DEV_3781&SUBSYS_3785105A
%Promise_Raid_ControllerDesc%=NODRV,SCSI\ProcessorPromise_

[NODRV]
CopyFiles=MoveNODRV

[MoveNODRV]

[NODRV.Services]
;
; this is blank to just allow the install to succeed
;
AddService = , %SPSVCINST_ASSOCSERVICE%   ; null service install

[Napa_Inst.ntx86] 
CopyFiles = FTT8s.Files.x86_12 

[Napa_Inst.ntx86.Services] 
AddService = FTT8s,0x00000002,Napa_Service_Instx86, Napa_EventLog_Inst 

[Napa_Service_Instx86] 
ServiceType = %SERVICE_KERNEL_DRIVER% 
StartType = %SERVICE_BOOT_START% 
ErrorControl = %SERVICE_ERROR_NORMAL% 
ServiceBinary = %12%\FTT8s.sys 
LoadOrderGroup = "SCSI Storport"
AddReg = pnpsafe_pci_addreg


[FTT8s.Files.x86_12] 
FTT8s.sys

[Napa_EventLog_Inst] 
AddReg = Napa_EventLog_Inst.AddReg 
 
[Napa_EventLog_Inst.AddReg] 
HKR,,EventMessageFile,%REG_EXPAND_SZ%,"%%SystemRoot%%\System32\IoLogMsg.dll" 
HKR,,TypesSupported,%REG_DWORD%,7

[pnpsafe_pci_addreg] 
HKR, Parameters, BusType, 0x00010001, 0x00000008
HKR, Parameters\PnpInterface, 5, 0x00010001, 0x00000001
HKR, Parameters\Device, NumberOfRequests, 0x00010001, 0x00000080 
HKR, Settings\CAM, EnableALPEDisableHotplug, 0x00010001, 0x00000000 

[pnpsafe_isa_addreg] 
HKR, Parameters\PnpInterface, 1, 0x00010001, 0x00000001 

[pnpsafe_eisa_addreg] 
HKR, Parameters\PnpInterface, 2, 0x00010001, 0x00000001 


