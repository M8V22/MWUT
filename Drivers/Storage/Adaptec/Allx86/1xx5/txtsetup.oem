[Disks]
d1 = "Adaptec SAS/SATA Driver for Windows 2003/Vista/2008", \sasdsk1, \

#-------------------------------------------------------------------------------
# [Defaults]
#-------------------------------------------------------------------------------

[Defaults]
scsi = ADPINV

#-------------------------------------------------------------------------------
# [HwComponent]
#-------------------------------------------------------------------------------

[scsi]
ADPINV = "Adaptec SAS/SATA Driver for Windows 2003/Vista/2008"

#-------------------------------------------------------------------------------
# [Files.HwComponent.ID]
